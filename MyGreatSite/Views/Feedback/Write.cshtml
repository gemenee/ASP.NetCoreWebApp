@model Feedback
@{
    string strTitle = "Редактировать запись";
    ViewBag.Title = strTitle;
}

<script src="~/js/ckeditor/ckeditor.js"></script>

<div>
    <h2>@strTitle</h2>
    <div>
        <form asp-area="" asp-controller="Feedback" asp-action="Write" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateAdded" />
            <input type="hidden" asp-for="IsChecked" />
            <div asp-validation-summary="All"></div>
            <div class="div-box">
                <label asp-for="Title"></label>
                <input asp-for="Title" />
                <span asp-validation-for="Title"></span>
            </div>
            <div class="div-box">
                <label asp-for="Subtitle">Имя</label>
                <textarea asp-for="Subtitle"></textarea>
                <span asp-validation-for="Subtitle"></span>
            </div>
            <br />
            <div class="div-box">
                <label asp-for="Text"></label>
                <textarea asp-for="Text"></textarea>
                <span asp-validation-for="Text"></span>
            </div>
            @*Сделать 2 колонки*@
            <p>
                <input type="submit" value="Сохранить" />
                <a asp-area="" asp-controller="Feedback" asp-action="Index" asp-route-id="" class="button">Отмена</a>
            </p>
        </form>
    </div>
</div>



