@model Cart

<div class="">
    <small class="navbar-text">
        <b>Ваша корзина:</b>
        @Model.Lines.Sum(x => x.Quantity) штук
        @Model.ComputeTotalValue().ToString("c")
    </small>
    <a class="Button" asp-controller="Cart" asp-action="Index" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i class="fa fa-shopping-cart"></i>
    </a>
</div>