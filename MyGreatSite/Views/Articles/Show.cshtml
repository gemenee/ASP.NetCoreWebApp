@model Article

@{
    ViewBag.Title = Model.MetaTitle;
    ViewBag.Description = Model.MetaDescription;
    ViewBag.Keywords = Model.MetaKeywords;
}

    <div>
        <h2>
            @Model.Title
        </h2>
        <h2>
            @Model.Subtitle
        </h2>
        @if (!(Model.TitleImagePath == null))
        { 
            <div>
                <span><img class="img-block" src="~/images/@Model.TitleImagePath" /></span>
            </div>
        }
    </div>
<div>
    @Html.Raw(Model.Text)
</div>